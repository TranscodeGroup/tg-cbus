<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.cbus.mapper.RuleMapper">

    
    <select id="getData" parameterType="com.cbus.po.RuleVo" resultType="com.cbus.po.RuleVo"> 
        select * from t_rule t1
        <where>
            <if test="id != null and id !=''">
                and id = #{id}
            </if>
            <if test="prefix != null and prefix !=''">
                and prefix = #{prefix}
            </if>
            <if test="likename != null and likename !=''">
            and t1.prefix like concat('%', #{likename}, '%')
            </if>
        </where>
        <if test="orderby != null and orderby !=''">
            order by ${orderby}
        </if>
    </select>
    
    <select id="getRuleId" parameterType="string" statementType="CALLABLE" resultType="int">
        call p_getruleid(#{prefix})
    </select>
    
    <!-- 更新数据 -->
    <update id="updateRecord" parameterType="com.cbus.po.RuleVo">
        update t_rule 
        <set>
          <if test="prefix !=null">
            prefix = #{prefix},
          </if>
          <if test="suffix != null">
            suffix = #{suffix},
          </if>
          <if test="remark != null">
            remark = #{remark},
          </if>
        </set>
        where id = #{id}
    </update>
  
    <insert id="addRecord" parameterType="com.cbus.po.RuleVo" useGeneratedKeys="true" keyProperty="id">
        insert into t_rule (prefix, suffix, remark) values 
          (#{prefix}, #{suffix}, #{remark})
    </insert>
    
    <delete id="delRecord" parameterType="com.cbus.po.RuleVo">
        delete from t_rule  where id = #{id}
    </delete>

</mapper>