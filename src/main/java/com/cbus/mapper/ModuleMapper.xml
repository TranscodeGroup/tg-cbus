<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cbus.mapper.ModuleMapper">


    <!-- 查表 -->
    <select id="getData" parameterType="com.cbus.po.ModuleVo" resultType="com.cbus.po.ModuleVo">
        SELECT t1.id,
               t1.gid,
               t1.pid,
               t1.opt,
               t1.isctrl,
               t1.icon,
               t1.path,
               t1.vue,
               t1.hide,
               t1.remark,
               t1.sortid
        FROM 
            T_module t1
        <where>
            <if test="id != null">
                and t1.id = #{id}
            </if>
            <if test="isctrl != null">
                and isctrl = #{isctrl}
            </if>
            <if test="gid != null and gid !=''">
                and gid = #{gid}
            </if>
            <if test="pid != null and pid !=''">
                and pid = #{pid}
            </if>
        </where>
        <if test="orderby != null and orderby !=''">
            order by ${orderby}
        </if>
    </select>
    
</mapper>