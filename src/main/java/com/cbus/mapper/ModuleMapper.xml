<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cbus.mapper.ModuleMapper">


    <!-- 查表 -->
    <select id="getData" parameterType="com.cbus.po.ModuleVo" resultType="com.cbus.po.ModuleVo">
        SELECT t1.id,
               t1.gid,
               t1.pid,
               t1.opt,
               t1.isctrl,
               t1.icon,
               t1.path,
               t1.vue,
               t1.hide,
               t1.remark,
               t1.sortid
        FROM 
            T_module t1
        <where>
            <if test="id != null">
                and t1.id = #{id}
            </if>
            <if test="isctrl != null">
                and isctrl = #{isctrl}
            </if>
            <if test="gid != null and gid !=''">
                and gid = #{gid}
            </if>
            <if test="pid != null and pid !=''">
                and pid = #{pid}
            </if>
        </where>
        <if test="orderby != null and orderby !=''">
            order by ${orderby}
        </if>
    </select>
    
    <insert id="addRecord" parameterType="com.cbus.po.ModuleVo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_module 
            (gid, pid, icon, path, hide, vue, remark, opt, sortid)
        VALUES 
            (#{gid}, #{pid}, #{icon}, #{path}, #{hide}, #{vue}, #{remark}, #{opt}, #{sortid});
    </insert>
   
    <delete id="delRecord" parameterType="com.cbus.po.ModuleVo">
        delete from t_module where id = #{id}
    </delete>
    
    <update id="updateRecord" parameterType="com.cbus.po.ModuleVo">
        update t_module 
        <set>
            <if test="gid != null and gid != ''">
                gid = #{gid},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="path != null">
                path = #{path},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="hide != null">
                hide = #{hide},
            </if>
            <if test="vue != null">
                vue = #{vue},
            </if>
            <if test="opt != null">
                opt = #{opt},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="sortid != null">
                sortid = #{sortid},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>